<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rental_reserve_date">

    <TextView
        android:id="@+id/chooserentalday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:text="Choose Rental"
        android:textSize="35dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooserentalday"
        android:id="@+id/pickup"
        android:hint="Enter Pick UP Date"/>

    <Button
        android:id="@+id/pickupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Pick up date"
        android:layout_below="@id/pickup"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickupbutton"
        android:layout_marginTop="10dp"
        android:id="@+id/returnday"
        android:hint="Enter your Return date"/>

    <Button
        android:id="@+id/renturnbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert return day"
        android:layout_below="@id/returnday"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showrentalinfo"
        android:text="RENTAL INFORMATION"
        android:layout_below="@id/renturnbutton"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="15dp"/>

    <Button
        android:id="@+id/BackToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/renturnbutton"
        android:layout_marginHorizontal="230dp"
        android:layout_marginTop="50dp"
        android:text="Back TO MENU" />
        <!--android:layout_below="@id/showrentalinfo"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>-->


</RelativeLayout>